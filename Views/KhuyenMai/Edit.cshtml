                <label asp-for="HinhAnhFile">Cáº­p nháº­t hÃ¬nh áº£nh</label>
                <input asp-for="HinhAnhFile" type="file" accept="image/*" onchange="previewImage(this)" />
                <img id="preview" src="~/images/@Model.HinhAnh" alt="áº¢nh khuyáº¿n mÃ£i" style="max-width:100%; margin-top:10px; border-radius:10px;" />
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">ðŸ’¾ LÆ°u thay Ä‘á»•i</button>
                <a asp-action="Index" class="btn-cancel">Quay láº¡i</a>
