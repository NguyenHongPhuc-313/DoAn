@model QuanLyKaraoke.Models.TaiKhoan
@{
    Layout = null; // Không sử dụng layout
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký</title>
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-form">
        <h2>Đăng Ký</h2>
        <form asp-action="DangKy" method="post">
            <div class="form-group">
                <label for="TenDangNhap">Tên Đăng Nhập</label>
                <input asp-for="TenDangNhap" placeholder="Nhập tên đăng nhập" />
                <span asp-validation-for="TenDangNhap" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="MatKhau">Mật Khẩu</label>
                <input asp-for="MatKhau" type="password" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="MatKhau" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="NhapLaiMatKhau">Nhập Lại Mật Khẩu</label>
                <input asp-for="NhapLaiMatKhau" type="password" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="NhapLaiMatKhau" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="HoTen">Họ Tên</label>
                <input asp-for="HoTen" placeholder="Nhập họ tên" />
                <span asp-validation-for="HoTen" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="Email" placeholder="Nhập email" />
                <span asp-validation-for="Email" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="SoDienThoai">Số Điện Thoại</label>
                <input asp-for="SoDienThoai" placeholder="Nhập số điện thoại" />
                <span asp-validation-for="SoDienThoai" class="error-message"></span>
            </div>
            <div class="form-group">
                <label for="VaiTro">Vai Trò</label>
                <select asp-for="VaiTro" class="form-select">
                    <option value="" disabled selected>Chọn vai trò</option>
                    <option value="User">Người dùng</option>
                    <option value="Admin">Quản trị viên</option>
                </select>
                <span asp-validation-for="VaiTro" class="error-message"></span>
            </div>
            <button type="submit">Đăng Ký</button>
        </form>
        <a href="/Auth/DangNhap">Đã có tài khoản? Đăng nhập</a>
    </div>
</body>
</html>
