@model QuanLyKaraoke.Models.KhuyenMai
@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/promotion.css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<div class="promo-container">
    <h2 class="promo-header">Xóa khuyến mãi</h2>
    <div class="delete-box">
        <p>Bạn có chắc chắn muốn xóa khuyến mãi <strong>@Model.TenKhuyenMai</strong>?</p>
        <form asp-action="DeleteConfirmed">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn-delete">
                <i class="fa fa-trash-alt"></i> Xác nhận xóa
            </button>
            <a asp-action="Index" class="btn-cancel">Hủy</a>
        </form>
    </div>
</div>
