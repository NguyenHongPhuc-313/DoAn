@{
    Layout = null; // Không sử dụng layout
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>
    <link rel="stylesheet" href="~/css/auth.css" />
</head>
<body>
    <div class="auth-form">
        <h2>Đăng Nhập</h2>
        @if (TempData["SuccessMessage"] != null)
        {
            <p class="success-message">@TempData["SuccessMessage"]</p>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <p class="error-message">@TempData["ErrorMessage"]</p>
        }
        <form asp-action="DangNhap" asp-controller="Auth" method="post">
            <div class="form-group">
                <label for="tenDangNhap">Tên Đăng Nhập</label>
                <input name="tenDangNhap" placeholder="Nhập tên đăng nhập" required />
            </div>
            <div class="form-group">
                <label for="matKhau">Mật Khẩu</label>
                <input name="matKhau" type="password" placeholder="Nhập mật khẩu" required />
            </div>
            <button type="submit">Đăng Nhập</button>
        </form>
        <div class="additional-links">
            <a href="/Auth/QuenMatKhau">Quên mật khẩu?</a>
            <a href="/Auth/DangKy">Chưa có tài khoản? Đăng ký</a>
        </div>
    </div>
</body>
</html>
